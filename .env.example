# Environment Variables Example
# Copy to `.env` and adjust values for your setup

# OpenAI configuration
VITE_OPENAI_API_KEY=your-api-key
VITE_OPENAI_MODEL=gpt-3.5-turbo
VITE_OPENAI_MAX_TOKENS=500
VITE_OPENAI_DETAILED_MAX_TOKENS=4000
VITE_OPENAI_TEMPERATURE=0.7
VITE_OPENAI_MAX_RETRIES=3
VITE_OPENAI_RETRY_DELAY=1000
VITE_OPENAI_TIMEOUT=30000
VITE_WAITING_PHRASES_DEFAULT=DefaultWaitingAnswer
VITE_WAITING_PHRASES_DETAILED=DetailedWaitingAnswer

# Provider behaviour
VITE_DEFAULT_LLM_PROVIDER=ollama
VITE_ENABLE_LOCAL_LLM=true
VITE_ENABLE_LLM_FALLBACK=true
VITE_ENABLE_PROVIDER_SWITCHING=false
VITE_LLM_FALLBACK_TIMEOUT=10000

# Ollama (local LLM) configuration
VITE_OLLAMA_API_URL=http://127.0.0.1:11434
VITE_OLLAMA_MODELS=qwen2.5:1.5b,qwen2.5:7b
VITE_OLLAMA_MAX_TOKENS=256
VITE_OLLAMA_TEMPERATURE=0.7
VITE_OLLAMA_NUM_CTX=2048
VITE_OLLAMA_STRICT=true
VITE_OLLAMA_REPEAT_PENALTY=1.1
VITE_OLLAMA_TOP_P=0.9
VITE_OLLAMA_TOP_K=40

# Resource thresholds
VITE_LLM_MEMORY_THRESHOLD=2048
VITE_LLM_CPU_THRESHOLD=0.95
VITE_LLM_RESOURCE_CHECK_INTERVAL=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_tutor_sessions
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_tutor_sessions
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TIMEOUT=86400000
SESSION_MAX_MESSAGES=1000
SESSION_CLEANUP_INTERVAL=3600000
SESSION_ARCHIVE_AFTER_DAYS=90

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SESSION_CREATE=10
RATE_LIMIT_MESSAGE_SEND=60

# CORS and API Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true
API_BASE_URL=http://localhost:5173/api
API_TIMEOUT=30000
API_MAX_PAYLOAD_SIZE=10mb
API_ENABLE_COMPRESSION=true

# Math Enhancement Configuration
VITE_MATH_ENABLE_AUTO_CLASSIFICATION=true
VITE_MATH_ENABLE_REQUEST_ENHANCEMENT=true
VITE_MATH_ENABLE_SYSTEM_PROMPTS=true
VITE_MATH_ENABLE_LOCAL_MODELS=false
VITE_MATH_MAX_TOKENS=4000
VITE_MATH_TEMPERATURE=0.3
VITE_MATH_MODEL=gpt-4-turbo
VITE_MATH_CONFIDENCE_THRESHOLD=0.5
VITE_MATH_ENABLE_CONTEXT=true

# Local Math Models (Ollama)
VITE_OLLAMA_MATH_MODEL=qwen2.5-math:7b
VITE_MATH_LOCAL_FALLBACK=true
VITE_MATH_LOCAL_TIMEOUT=30000

# Category-specific Math Configuration (optional)
# VITE_MATH_ALGEBRA_MAX_TOKENS=3000
# VITE_MATH_GEOMETRY_MAX_TOKENS=3500
# VITE_MATH_CALCULUS_MAX_TOKENS=4000
# VITE_MATH_PROBABILITY_MAX_TOKENS=3500
# VITE_MATH_DISCRETE_MAX_TOKENS=3500
# VITE_MATH_ARITHMETIC_MAX_TOKENS=2000

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

