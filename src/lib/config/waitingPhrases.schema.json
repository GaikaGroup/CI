{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/waiting-phrases.schema.json",
  "title": "Waiting Phrases Configuration Schema",
  "description": "Schema for validating waiting phrases configuration files",
  "type": "object",
  "required": ["phrases", "settings"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration version in semver format"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the configuration"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date",
      "description": "Date when configuration was last updated (YYYY-MM-DD)"
    },
    "phrases": {
      "type": "object",
      "description": "Waiting phrases organized by category and language",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "description": "Category of phrases (e.g., general, math, creative)",
          "patternProperties": {
            "^[a-z]{2}(-[A-Z]{2})?$": {
              "type": "array",
              "description": "Language code (ISO 639-1 format, optionally with country code)",
              "minItems": 1,
              "maxItems": 50,
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1000,
                "description": "Individual waiting phrase"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "description": "Configuration settings for waiting phrases behavior",
      "required": [
        "avoidConsecutiveRepeats",
        "maxPhraseLength",
        "fallbackToTranslation",
        "defaultLanguage",
        "maxHistorySize"
      ],
      "properties": {
        "avoidConsecutiveRepeats": {
          "type": "boolean",
          "description": "Whether to avoid selecting the same phrase consecutively"
        },
        "maxPhraseLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 500,
          "description": "Maximum number of words in a phrase"
        },
        "fallbackToTranslation": {
          "type": "boolean",
          "description": "Whether to use translation when native language phrases are unavailable"
        },
        "defaultLanguage": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "Default language code to fall back to"
        },
        "maxHistorySize": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of phrases to keep in selection history"
        },
        "enableContextualPhrases": {
          "type": "boolean",
          "description": "Whether to enable context-specific phrase categories"
        },
        "cacheTimeout": {
          "type": "integer",
          "minimum": 0,
          "description": "Cache timeout in milliseconds (0 = no timeout)"
        },
        "translationTimeout": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 30000,
          "description": "Translation request timeout in milliseconds"
        },
        "maxCacheSize": {
          "type": "integer",
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum number of items to keep in cache"
        },
        "enableLogging": {
          "type": "boolean",
          "description": "Whether to enable detailed logging"
        },
        "logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "description": "Logging level"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the configuration",
      "properties": {
        "supportedLanguages": {
          "type": "array",
          "description": "List of supported language codes",
          "items": {
            "type": "string",
            "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
          }
        },
        "categories": {
          "type": "array",
          "description": "List of available phrase categories",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
          }
        },
        "totalPhrases": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of phrases in the configuration"
        },
        "contributors": {
          "type": "array",
          "description": "List of contributors to the configuration",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "string",
          "description": "License under which the configuration is distributed"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "phrases": {
        "general": {
          "en": ["Let me think about this...", "Give me a moment..."],
          "es": ["DÃ©jame pensar en esto...", "Dame un momento..."]
        }
      },
      "settings": {
        "avoidConsecutiveRepeats": true,
        "maxPhraseLength": 8,
        "fallbackToTranslation": true,
        "defaultLanguage": "en",
        "maxHistorySize": 5
      }
    }
  ]
}
