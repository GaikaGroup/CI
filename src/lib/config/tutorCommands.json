{
  "$schema": "./tutorCommands.schema.json",
  "version": "1.0.0",
  "description": "Tutor command definitions with multilingual support",
  "lastUpdated": "2025-10-21",
  "commands": [
    {
      "id": "explain",
      "category": "understanding",
      "translations": {
        "en": {
          "name": "/explain",
          "description": "Explains a topic in simple terms",
          "example": "/explain quadratic equations"
        },
        "ru": {
          "name": "/объяснить",
          "description": "Объясняет тему простыми словами",
          "example": "/объяснить квадратные уравнения"
        },
        "es": {
          "name": "/explicar",
          "description": "Explica un tema en términos simples",
          "example": "/explicar ecuaciones cuadráticas"
        }
      }
    },
    {
      "id": "solve",
      "category": "problem-solving",
      "translations": {
        "en": {
          "name": "/solve",
          "description": "Solves a problem step by step",
          "example": "/solve x^2 + 5x + 6 = 0"
        },
        "ru": {
          "name": "/решить",
          "description": "Решает задачу пошагово",
          "example": "/решить x^2 + 5x + 6 = 0"
        },
        "es": {
          "name": "/resolver",
          "description": "Resuelve un problema paso a paso",
          "example": "/resolver x^2 + 5x + 6 = 0"
        }
      }
    },
    {
      "id": "check",
      "category": "validation",
      "translations": {
        "en": {
          "name": "/check",
          "description": "Checks your answer, text, code, or essay",
          "example": "/check answer=(-2, -3) or /check essay=\"my text...\""
        },
        "ru": {
          "name": "/проверить",
          "description": "Проверяет ваш ответ, текст, код или эссе",
          "example": "/проверить ответ=(-2, -3) или /проверить эссе=\"мой текст...\""
        },
        "es": {
          "name": "/verificar",
          "description": "Verifica tu respuesta, texto, código o ensayo",
          "example": "/verificar respuesta=(-2, -3) o /verificar ensayo=\"mi texto...\""
        }
      }
    },
    {
      "id": "practice",
      "category": "practice",
      "translations": {
        "en": {
          "name": "/practice",
          "description": "Gives similar exercises for practice",
          "example": "/practice topic=\"quadratic equations\" n=3"
        },
        "ru": {
          "name": "/практика",
          "description": "Дает похожие упражнения для практики",
          "example": "/практика тема=\"квадратные уравнения\" n=3"
        },
        "es": {
          "name": "/practicar",
          "description": "Da ejercicios similares para practicar",
          "example": "/practicar tema=\"ecuaciones cuadráticas\" n=3"
        }
      }
    },
    {
      "id": "notes",
      "category": "notes",
      "translations": {
        "en": {
          "name": "/notes",
          "description": "Creates a short summary or cheatsheet",
          "example": "/notes topic=\"quadratic equations\""
        },
        "ru": {
          "name": "/заметки",
          "description": "Создает краткое резюме или шпаргалку",
          "example": "/заметки тема=\"квадратные уравнения\""
        },
        "es": {
          "name": "/notas",
          "description": "Crea un resumen breve o guía rápida",
          "example": "/notas tema=\"ecuaciones cuadráticas\""
        }
      }
    },
    {
      "id": "essay",
      "category": "writing",
      "translations": {
        "en": {
          "name": "/essay",
          "description": "Writes an essay on a given topic",
          "example": "/essay topic=\"Why education matters\""
        },
        "ru": {
          "name": "/эссе",
          "description": "Пишет эссе на заданную тему",
          "example": "/эссе тема=\"Почему образование важно\""
        },
        "es": {
          "name": "/ensayo",
          "description": "Escribe un ensayo sobre un tema dado",
          "example": "/ensayo tema=\"Por qué la educación importa\""
        }
      }
    },
    {
      "id": "help",
      "category": "reference",
      "translations": {
        "en": {
          "name": "/help",
          "description": "Shows this help menu",
          "example": "/help"
        },
        "ru": {
          "name": "/помощь",
          "description": "Показывает это меню помощи",
          "example": "/помощь"
        },
        "es": {
          "name": "/ayuda",
          "description": "Muestra este menú de ayuda",
          "example": "/ayuda"
        }
      }
    }
  ],
  "settings": {
    "enableKeyboardShortcut": true,
    "shortcutKey": "/",
    "defaultLanguage": "en"
  }
}
